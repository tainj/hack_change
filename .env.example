# PostgreSQL Settings
POSTGRES_HOST=postgres
POSTGRES_USER=learning_user
POSTGRES_PASSWORD=verydifficlutpassword
POSTGRES_DB=learning_db
POSTGRES_PORT=5432

# Full DB URL for migrate tool and apps (used by docker-compose migrate service)
# Example: postgres://user:password@postgres:5432/dbname?sslmode=disable
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable

# Server Ports
REST_SERVER_PORT=8080

# JWT
JWT_SECRET_KEY=your-super-secret-key-here-32-chars-min
JWT_EXPIRE_HOURS=24h
JWT_ISSUER=learning_platform